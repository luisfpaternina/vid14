<?xml version="1.0" encoding="UTF-8"?>     
<odoo>
    <data>

        <!-- TREE VIEW -->
        <record id="view_credit_limit_tree" model="ir.ui.view">
            <field name="name">credit.limit.tree</field>
            <field name="model">credit.limit</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="credit_limit">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="credit_amount"/>
                </tree>
            </field>
        </record>

        <!-- FORM VIEW -->
        <record id="view_credit_limit_form" model="ir.ui.view">
            <field name="name">credit.limit.form</field>
            <field name="model">credit.limit</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="school">
                    <header>
                        <button name="write_current_state" string="send to verify" type="object" attrs="{'invisible': [('state', '!=', 'draft')]}" class="btn btn-primary"/>
                        <button name="write_approval_state" string="approval" type="object" attrs="{'invisible': [('state', '!=', 'approved')]}" class="btn btn-primary"/>
                        <button name="write_cancel_state" string="CANCEL" type="object" attrs="{'invisible': [('state', '=', 'calcel')]}"  class="btn btn-danger"/>
                        <field name="state" widget="statusbar" readonly="1"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <table>
                                    <tr>
                                        <td style="padding-right:10px;">
                                            <field name="name" required="1"/>
                                        </td>
                                    </tr>
                                </table>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id" required="1" options="{'no_create': True, 'no_create_edit':True}"/>
                                <field name="vat"/>
                                <field name="current_user_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="credit_amount" required="1"/>
                            </group>
                        </group>
                        <br></br><br></br>
                        <notebook colspan="4">
                            <page name="credit_information" string="Information">
                                <group>
                                    <group>
                                        
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- ACTION -->
        <record model="ir.actions.act_window" id="action_view_credit_limit">
            <field name="name">Credit limit</field>
            <field name="res_model">credit.limit</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create new record
                </p>
            </field>
        </record>

        <!-- MENUS -->
        <menuitem 
            id="menu_credit_limit_principal"
            name="Credits"
            groups="indv_limit_credit.credit_limit_manager_group"
            web_icon="indv_limit_credit,static/description/icon.png"
            action="action_view_credit_limit"
            sequence="36"/>

        <menuitem 
            id="menu_credit_limit"
            name="Credit limit"
            parent="menu_credit_limit_principal"
            action="action_view_credit_limit"/>
                   
    </data>
</odoo>