                          <div id="cuadro2">
                             
                          </div>
                          <div id="espacio"></div>
                          <table style="width:100%">
                              <tr>
                                <th>Fecha</th>
                                <th>NÂ°</th>
                                <th>Cliente</th>
                              </tr>
                              <tr>
                                <td>
                                    <span t-field="o.date"></span>
                                </td>
                                <td>
                                    <span t-field="o.name"></span>
                                </td>
                                <td>
                                    <span t-field="o.partner_id"></span>
                                </td>
                              </tr>
                         </table>
                         <br></br>
                         <table width="100%">
                             <thead>
                                 <tr>
                                    <th>Quote number</th>
                                    <th>Date</th>
                                 </tr>
                             </thead>
                             <tbody>
                                <t t-foreach="o.credit_line_ids" t-as="line">
                                     <tr>
                                        <td>
                                            <span t-field="line.name"></span>
                                        </td>
                                        <td>
                                            <span t-field="line.date"></span>
                                        </td>
                                     </tr>
                                </t>
                             </tbody>
                         </table>
                         <br></br>
                       </div>
                    </div>
                    <div class="footer">
                        <p align="left" style="font-size: 7px;">
                            <span t-field="o.company_id"></span>
                        </p>
                    </div>
                </t>
            </t>
        </template>

        <report
                id="id_credit_limit_report_template"
                string="Credit limit report"
                model="credit.limit"
                report_type="qweb-pdf"
                name="indv_limit_credit.report_template_credit_limit"
        />

    </data>
</odoo>