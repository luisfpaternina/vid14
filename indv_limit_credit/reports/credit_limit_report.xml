                                width:700px;
                                height:20px;
                                background-color:white;
                                float:right;
                                border: 0px solid black;
                                }
                                table, th, td {
                                border:1px solid black;
                                padding: 5px;
                                }
                                #t01 td {
                                border: 0px solid black;
                                }
