<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <template id="report_template_credit_limit">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">                    
                    <div class="header">
                        <table style="width:100%">
                          <tr>
                            <th>
                                <p align="justify">
                                   
                                </p>
                            </th>
                            <th>
                                <p align="left" style="font-size: 13px;">
                                    
                                </p>
                            </th>
